{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "rootDir": ".",
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
  },
  "exclude": ["*/__tests__/**/*", "./lib/**/*", "node_modules"]
}
