{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "declaration": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "incremental": true
  },
  "exclude": ["*/__tests__/**/*", "./lib/**/*"]
}
